<div id="column1">
  <% if @posts.present? %>
    <% @posts.each do |post| %>

      <h2><%= link_to post.title, post %></h2>

      <div class="post_info">
        <p>por <%= link_to post.author.full_name, user_path(post.author_id) %>
        em <%=l post.created_at, :format => :post %></p>
    </div>

    <div id="post">
      <%= textilize post.body %>
    </div>

    <div class="post_info">
      Categorias:
      <% number_of_categories = post.categories.count %>
      <% post.categories.each do |category| %>
        <% number_of_categories -= 1 %>
        <%= link_to category.name, posts_path(:category_id => category.id) %><%= number_of_categories > 0 ? ',' : ';' %>
      <% end %>
      <p><%= pluralize(post.comments.count, ' comentário', ' comentários') + ';' %></p>
    </div>
  <% end %>

<% else %>
  <p>Não há posts.</p> 
<% end %>
</div>

<%= render "sidebar" %>

